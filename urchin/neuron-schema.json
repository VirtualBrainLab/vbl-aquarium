{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "NeuronData",
    "properties": {
      "id": {
        "type": "number"
      },
      "type": {
        "type": "string",
        "const": "neuron"
      },
      "position": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "required": ["x", "y", "z"],
        "additionalProperties": false 
      },
      "color": {
        "type": "string"
      },
      "shape": {
        "type": "string"
      },
      "material": {
        "type": "string"
      },
      "additionalProperties": false 
    }
  }
  