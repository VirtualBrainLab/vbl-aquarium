{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "CameraData",
    "properties": {
      "id": {
        "type": "number"
      },
      "type": {
        "type": "string",
        "const": "camera"
      },
      "position": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "required": ["x", "y", "z"],
        "additionalProperties": false 
      },
      "rotation": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "required": ["x", "y", "z"] ,
        "additionalProperties": false 
      },
      "target": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "z": {
            "type": "number"
          }
        },
        "required": ["x", "y", "z"] ,
        "additionalProperties": false 
      },
      "zoom": {
        "type": "number"
      },
      "pan": {
        "type": "object",
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          }
        },
        "required": ["x", "y"] ,
        "additionalProperties": false 
      },
      "mode": {
        "type": "string",
        "enum": ["orthographic", "perspective"]
      },
      "controllable": {
        "type": "boolean"
      },
      "main": {
        "type":"boolean"
      },
      "additionalProperties": false 
    }
  }
  